{
	"name": "htswap",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ahme-dev/htswap.git"
	},
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"keywords": [
		"htswap",
		"swap",
		"htmx",
		"ajax",
		"ui",
		"minimal"
	],
	"files": [
		"dist",
		"dist-min",
		"dist-compat"
	],
	"main": "./dist/htswap.cjs",
	"types": "./dist/htswap.d.ts",
	"module": "./dist/htswap.js",
	"exports": {
		".": {
			"import": {
				"types": "./dist/htswap.d.ts",
				"default": "./dist/htswap.js"
			},
			"require": {
				"types": "./dist/htswap.d.cts",
				"default": "./dist/htswap.cjs"
			}
		}
	},
	"size-limit": [
		{
			"path": "src/htswap.ts",
			"gzip": true,
			"limit": "999b"
		}
	],
	"scripts": {
		"size": "size-limit",
		"build": "tsdown",
		"test": "cypress open --e2e",
		"prepublishOnly": "pnpm run build",
		"fix": "biome check --write"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.6",
		"@size-limit/preset-small-lib": "^11.2.0",
		"cypress": "^15.1.0",
		"jsdom": "^26.1.0",
		"publint": "^0.3.12",
		"size-limit": "^11.2.0",
		"tsdown": "^0.14.1",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	}
}